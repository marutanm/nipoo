.row-fluid
  .span8
    = form_for @report do |f|
      -if @report.errors.any?
        #error_explanation
          %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
          %ul
            - @report.errors.full_messages.each do |msg|
              %li= msg
    
      .field
        = f.label :date
        = f.date_select :date
      .field
        = f.label :body
        = f.text_area :body, :rows => 30, :cols => 30, :class => 'span12'
      .actions.form-actions
        = f.submit 'Save', :class => 'btn btn-primary'
        = link_to 'Cancel', :reports, :class => 'btn'
  .span4
    %section
      .page-header
        %h1 記入例
      %ul
        %li 今週やること
        %li 今日やったこと
        %li 明日やること
        %li 困ったこと・悩んでいること
        %li 自由に
