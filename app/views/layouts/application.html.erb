<!DOCTYPE html>
<html>
<head>
  <title>Nipoo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:notice].present? %>
    <div id="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert].present? %>
    <div id="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if logged_in? %>
    <p>Hello, <%= current_user.name %>! <%= link_to 'Logout', :logout %></p>
    <%= yield %>
  <% else %>
    <%= link_to 'Login', :login %>
  <% end %>

</body>
</html>
